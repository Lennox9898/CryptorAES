#!/usr/bin/env bash
# Simple launcher for the `LittleCrypt` helper script.
# Usage: ./cryptor_kyber --gen-kyber-pair

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PY="python3"

if ! command -v "$PY" >/dev/null 2>&1; then
  echo "python3 not found in PATH" >&2
  exit 2
fi

exec "$PY" "$SCRIPT_DIR/LittleCrypt" "$@"
